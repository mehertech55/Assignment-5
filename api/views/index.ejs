<html lang="en">
<head>
    <title>Customer List</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="/stylesheets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" type="text/css" href="/stylesheets/animate.css">

    <link rel="stylesheet" type="text/css" href="/stylesheets/select2.min.css">

    <link rel="stylesheet" type="text/css" href="/stylesheets/perfect-scrollbar.css">

    <link rel="stylesheet" type="text/css" href="/stylesheets/util.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>

<body>
<div class="limiter">
    <div class="container-table100">
        <div class="wrap-table100">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Customer List</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header">
                    <h5>Customer List</h5>
                </div>

                <div class="card-body">
                    <div class="row" style="margin-top: 20px;">
                        <div class="col-sm-12">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col"><strong>Customer ID</strong></th>
                                        <th scope="col"><strong>Customer Name</strong></th>
                                        <th scope="col"><strong>Customer Email</strong></th>
                                        <th scope="col"><strong>Actions</strong></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% for(var i=0; i < customers.length; i++) { %>
                                        <tr>
                                            <th scope="row"><%= customers[i].id %></th>
                                            <td><%= customers[i].first %> <%= customers[i].last %></td>
                                            <td><%= customers[i].email %></td>
                                            <td><a class="btn btn-sm btn-primary" href="/customers/<%= customers[i].id %>">View Details</a></td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/jquery-3.2.1.min.js"></script>

<script src="/javascripts/popper.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>

<script src="/javascripts/select2.min.js"></script>

<script src="/javascripts/perfect-scrollbar.min.js"></script>

<script>
    $('.js-pscroll').each(function(){
        var ps = new PerfectScrollbar(this);

        $(window).on('resize', function(){
            ps.update();
        })
    });
</script>

<script src="/javascripts/main.js"></script>
</body>
</html>